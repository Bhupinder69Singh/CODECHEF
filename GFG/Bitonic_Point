class Solution{
public:
	
	int findMaximum(int arr[], int n) {
	    // code here
	    sort(arr,arr+n);
	    return arr[n-1];
	}
};


//Here we are given array is strictly increasing first then decreasing
//APPROACH 2
class Solution{
public:
	
	int findMaximum(int arr[], int n) {
	    // code here
	    for(int i=0;i<n;i++){
	        if(arr[i]>arr[i+1]){
	            return arr[i];
	        }
	    }
	}
};
